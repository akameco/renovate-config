{
  "name": "@akameco/renovate-config",
  "version": "1.5.0",
  "main": "index.js",
  "author": "akameco <akameco.t@gmail.com>",
  "license": "MIT",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":automergeMinor",
        ":rebaseStalePrs",
        ":separatePatchReleases",
        ":timezone(Asia/Tokyo)",
        "group:allNonMajor",
        "group:linters",
        "group:monorepos",
        "group:definitelyTyped",
        "schedule:weekly"
      ],
      "lockFileMaintenance": {
        "enabled": true,
        "schedule:": [
          "before 3am on the first day of the month"
        ]
      },
      "packageRules": [
        {
          "groupName": "eslint and prettier",
          "packageNames": [
            "^eslint-",
            "prettier"
          ],
          "automerge": true
        },
        {
          "groupName": "dev utils",
          "packageNames": [
            "all-contributors-cli",
            "husky",
            "lint-staged"
          ],
          "automerge": true
        }
      ]
    }
  }
}
